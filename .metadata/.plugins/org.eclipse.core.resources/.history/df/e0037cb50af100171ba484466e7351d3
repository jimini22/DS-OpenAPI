 	<!--
		3.1.16 : 친구 그룹 변경 : 위비톡 친구기본 테이블
		WBT3_IMM002TM에서 회원의 해당 그룹의 친구들의 정보를 다시 인서트한다.
		@param : GroupInfoVO
		@return : int
	-->
	<insert id="insertFriendInGroup" parameterType="com.wooribank.wbt3.act.friend.model.data.GroupInfoVO">
		INSERT INTO WBT3_IMM002TM
		(
			MBH_IDX_NO,
			FRND_MBH_IDX_NO,
			FRND_GRP_MNG_NO,
			CNAD_FRND_YN,
			FRND_MNG_TPCD,
			FRND_NM,
			FRND_ALS_NM,
			FAVT_FRND_YN,
			NEW_ADD_FRND_YN,
			FRND_MBH_SORT_SQNO,
			FRND_RGS_DTM
		)
	
		SELECT
				MBH_IDX_NO,
				FRND_MBH_IDX_NO,
				#{groupId},
				CNAD_FRND_YN,
				FRND_MNG_TPCD,
				FRND_NM,
				FRND_ALS_NM,
				FAVT_FRND_YN,
				NEW_ADD_FRND_YN,
				
		        (  
					SELECT (IFNULL(MAX(FRND_MBH_SORT_SQNO),0) + 1) AS ORDERNUM 
					FROM   WBT3_IMM002TM 
					WHERE  MBH_IDX_NO = #{useridx} AND FRND_GRP_MNG_NO = #{groupId}   
		        ) AS FRND_MBH_SORT_SQNO,
		        
				DATE_FORMAT(NOW(), '%Y%m%d%H%i%s' )
		FROM 
		        WBT3_IMM002TM
		WHERE 
				MBH_IDX_NO      = #{useridx}       AND	 
				FRND_MBH_IDX_NO = #{friendUseridx} AND  
				FRND_GRP_MNG_NO = 1
	</insert>

	<!--
		3.1.16 : 친구그룹변경 삭제후 정렬을 위해서 친구를 정렬순으로 재조회 
		@param : FriendGroupInfoVO
		@return : FriendGroupInfoVO"
	-->
	<select id="selectGroupFriendOrder" parameterType ="com.wooribank.wbt3.act.friend.model.data.GroupInfoVO" resultType="com.wooribank.wbt3.act.friend.model.data.FriendGroupInfoVO">
		SELECT 
		       MBH_IDX_NO AS useridx,
		       FRND_MBH_IDX_NO AS friendsUserIndexNum,
		       FRND_GRP_MNG_NO AS friendsGroupManageNum ,
		       FRND_MBH_SORT_SQNO AS friendUserOrderNum,
		       FRND_MNG_TPCD AS friendsManageTypeCode
		 FROM WBT3_IMM002TM 
		 WHERE  MBH_IDX_NO = #{useridx}
			 <if test='friendUseridx != null '>
			 AND FRND_MBH_IDX_NO =  #{friendUseridx}
			 </if>
		 	<if test='groupId != null '>
		 	  AND FRND_GRP_MNG_NO = #{groupId}
		 	</if>
		 ORDER BY FRND_MBH_SORT_SQNO
	</select>
	


    <!--
        3.1.17 (신규) 프로필 변경 친구 조회
        @param : ChangedProfileFriendsDataVO
        @return : ChangedProfileFriendsInfoVO
    -->
    <select id="selectChangedProfileFriends" parameterType="com.wooribank.wbt3.act.friend.model.data.ChangedProfileFriendsDataVO"
                                                      resultType="com.wooribank.wbt3.act.friend.model.data.ChangedProfileFriendsInfoVO">
    
		SELECT
		    FRND_MBH_IDX_NO   AS useridx  /* 친구_회원_인덱스_번호 int(11) */
		
		FROM
		    WBT3_IMM001TM     AS USER,
		    WBT3_IMM002TM     AS FRIEND            
        
        WHERE 
            FRIEND.FRND_MBH_IDX_NO = USER.MBH_IDX_NO AND 
            FRIEND.MBH_IDX_NO      = #{useridx}             AND /* 친구의 회원_인덱스_번호 int(11)*/
            FRIEND.FRND_GRP_MNG_NO = #{friendGroupNo}       AND /* 친구_그룹_관리_번호 (기본그룹 : 1, 생성그룹 : 2 .....)  int(5)*/
            FRIEND.FRND_MNG_TPCD   = #{friendMsgCode}       AND /* 친구_관리_유형코드 (1:친구, 2:숨김친구, 3:차단친구, 4:차단친구) varchar(50)*/
            USER.MBH_AMD_DTM    > #{searchDate}                 /* 회원_수정_일시 varchar(20)*/
            
    </select>
	
	
	
	 <!-- 
      3.1.19 친구위치정보 가져오기 
      @param : useridx
      @return : DistanceInfoVO
    -->
    
    <select id="selectFriendLocationList" parameterType ="long" resultType="com.wooribank.wbt3.act.friend.model.data.DistanceInfoVO">
    		SELECT A.*
				  FROM
				       (SELECT A.MBH_IDX_NO AS useridx,
				              distance_between_meter(#{useridx},A.MBH_IDX_NO) AS distance
				         FROM WBT3_IMM001TM A
				            INNER JOIN
				              (SELECT FRIENDINFO.FRND_MBH_IDX_NO
				                FROM WBT3_IMM002TM FRIENDINFO
				               WHERE FRIENDINFO.MBH_IDX_NO = #{useridx}
				                     AND FRIENDINFO.FRND_GRP_MNG_NO = 1
				                     AND FRIENDINFO.FRND_MNG_TPCD = '1'
				              ) B
				                ON (
				                A.MBH_IDX_NO = B.FRND_MBH_IDX_NO
				              )
				            INNER JOIN WBT3_IMM007TM C
				                ON (
				                B.FRND_MBH_IDX_NO = C.MBH_IDX_NO
				              )
				        WHERE A.LCA_INF_USE_YN = 'Y'
				          AND A.PRFL_SRCH_ALW_YN = 'Y'
				          AND A.MBH_ACC_STS_TPCD = '0'
				       ) A
				ORDER BY distance
    </select>
    
     <!-- 
      3.1.20 추천친구위치정보 가져오기 
      @param : FriendMngVO"
      @return : DistanceInfoVO
    -->
    
     <select id="selectRecommandFriendLocationList" parameterType ="com.wooribank.wbt3.act.friend.model.data.FriendMngVO" resultType="com.wooribank.wbt3.act.friend.model.data.DistanceInfoVO">
     		SELECT A.* 
				  FROM 
				       (SELECT B.MBH_IDX_NO AS useridx, 
				              distance_between_meter(#{useridx},B.MBH_IDX_NO) AS distance 
				         FROM 
				              (SELECT LATD_DGRE, 
				                     (LATD_MNU+3) AS PLUS_LATD, 
				                     (LATD_MNU-3) AS MINUS_LATD , 
				                     LATD_MNU , 
				                     LGTD_DGRE, 
				                     (LGTD_MNU+3) AS PLUS_LGTD, 
				                     (LGTD_MNU-3) AS MINUS_LGTD , 
				                     LGTD_MNU 
				                FROM WBT3_IMM007TM 
				               WHERE MBH_IDX_NO = #{useridx} 
				              ) A 
				            INNER JOIN 
				              (SELECT A.MBH_IDX_NO , 
				                     C.LATD_DGRE, 
				                     C.LATD_MNU, 
				                     C.LGTD_DGRE, 
				                     C.LGTD_MNU 
				                FROM WBT3_IMM001TM A 
				                   INNER JOIN WBT3_IMM007TM C 
				                       ON ( 
				                       A.MBH_IDX_NO = C.MBH_IDX_NO 
				                     ) 
				                   LEFT JOIN 
				                     (SELECT FRIENDINFO.FRND_MBH_IDX_NO AS FRND_MBH_IDX_NO 
				                       FROM WBT3_IMM002TM FRIENDINFO 
				                      WHERE FRIENDINFO.MBH_IDX_NO = #{useridx} 
				                            AND FRIENDINFO.FRND_GRP_MNG_NO = 1 
				                     ) B 
				                       ON ( 
				                       A.MBH_IDX_NO = B.FRND_MBH_IDX_NO 
				                     )  
				               WHERE A.MBH_ACC_STS_TPCD = '0' 
				                     AND A.LCA_INF_USE_YN = 'Y' 
				                     AND A.PRFL_SRCH_ALW_YN = 'Y' 
				                     AND A.MBH_IDX_NO &lt;&gt; #{useridx} 
						             <if test='searchType != null and searchType.equals("0") '>
					        	  		AND    A.WBBT_MBH_TPCD IN ('0','1','2')
					        		</if>
					         		<if test='searchType != null and searchType.equals("1") '>
					        	  		AND    A.WBBT_MBH_TPCD IN ('4','5')
					        		</if>      
				                AND B.FRND_MBH_IDX_NO IS NULL 
				              ) B 
				                ON ( 
				                A.LATD_DGRE = B.LATD_DGRE 
				                AND A.LGTD_DGRE = B.LGTD_DGRE 
				                AND B.LATD_MNU BETWEEN A.MINUS_LATD AND A.PLUS_LATD 
				                AND B.LGTD_MNU BETWEEN A.MINUS_LGTD AND A.PLUS_LGTD 
				              ) 
				       ) A 
     		 WHERE 1 = 1 
				       AND distance &lt;= #{distanceRange} 
				       ORDER BY distance
				       LIMIT #{limit}
     
     </select>
     
     <!--
		3.1.21 친구 추가 : 친구의 전체 갯수조회  
		@param : long
		@return : long
	-->
	<select id="selectFriendCnt" parameterType ="long" resultType="long">
		  SELECT COUNT(1) 
			  FROM WBT3_IMM001TM A 
			     JOIN WBT3_IMM002TM B 
			         ON ( 
			         A.MBH_IDX_NO = B.MBH_IDX_NO
			       ) 
			 WHERE A.MBH_IDX_NO = #{useridx}  
	</select>
	
	 <!-- 
      3.1.21 추천친구위치정보 가져오기 
      @param : FriendMngVO"
      @return : selectRecommandFriendLocationList
    -->
    
     <select id="selectFriendSimpleList" parameterType ="com.wooribank.wbt3.act.friend.model.data.FriendMngVO" resultType="com.wooribank.wbt3.act.friend.model.data.SimpleFriendInfoVO">
	
		SELECT A.*
		  FROM
		       (SELECT M.FRND_MBH_IDX_NO as useridx ,
		              SA.HP_NO as phoneNo ,
		              SA.WBBT_MBH_TPCD as idType ,
		              CASE
		              WHEN ASCII(substr( IFNULL( IFNULL( IF(M.FRND_ALS_NM='', NULL, M.FRND_ALS_NM) ,M.FRND_NM ) , SA.PRFL_ALS ),1,1))  IS NULL THEN 3
		              ELSE 
		              		 CASE WHEN 
		                     ASCII(substr( IFNULL( IFNULL( IF(M.FRND_ALS_NM='', NULL, M.FRND_ALS_NM) ,M.FRND_NM ) , SA.PRFL_ALS ),1,1))  &lt; 128 THEN
		                     2 ELSE 1 END
		              END AS SORT,
		              IFNULL( IFNULL( IF(M.FRND_ALS_NM = '', NULL, M.FRND_ALS_NM) ,M.FRND_NM ) , SA.PRFL_ALS ) as userName ,
		              SA.PRFL_MSG_TEXT as profileMessage ,
		              M.FRND_MNG_TPCD as friendMngType ,
		              (SELECT PRFL_PCTR_THBN_PATH_NM
		                FROM WBT3_IMM005TM IMG
		               WHERE SA.MBH_IDX_NO = IMG.MBH_IDX_NO
		                     AND IMG.OPBL_PRFL_PCTR_YN = 'N'
		                     AND IMG.PCTR_MD_MAIN_YN = 'Y'
		              ) as smallThumbnail
		         FROM WBT3_IMM002TM M ,
		              WBT3_IMM001TM SA
		        WHERE 
		               M.MBH_IDX_NO = #{useridx} 
		              AND M.FRND_GRP_MNG_NO = 1
		              AND M.FRND_MBH_IDX_NO = SA.MBH_IDX_NO
		       ) A 
		       ORDER BY SORT,userName
		       LIMIT #{nowRowIndex},#{limit}
	</select>
	
	<!--
		친구리스트조회
		@param : 
		@return : long
	-->
	<select id="selectFriends"  flushCache="true" useCache="false" parameterType="com.wooribank.wbt3.act.friend.model.data.FriendInfoVO" resultType="long">
	
		SELECT
			FRIEND.FRND_MBH_IDX_NO AS useridx
		FROM 
            WBT3_IMM001TM USER
			
			INNER JOIN WBT3_IMM002TM FRIEND
			
			ON ( 
				USER.MBH_IDX_NO = FRIEND.MBH_IDX_NO
				
				<if test="friendsGroupManageNum lt 2">
				AND FRIEND.FRND_GRP_MNG_NO = 1
				</if>
				
				<if test="friendsGroupManageNum gt 1">
				AND FRIEND.FRND_GRP_MNG_NO = #{friendsGroupManageNum}
				</if>				
				<if test='friendsManageTypeCode != null '>
				AND FRIEND.FRND_MNG_TPCD = #{friendsManageTypeCode} /* 1:친구, 2:숨김친구, 3:차단친구, 4:삭제친구 */
				</if>
				<if test='favoriteFriendYN != null and favoriteFriendYN.equals("Y") '>
				AND FRIEND.FAVT_FRND_YN = #{favoriteFriendYN}
				</if>
				
				<if test='newFriendYN != null and newFriendYN.equals("Y") '>
				AND FRIEND.NEW_ADD_FRND_YN = #{newFriendYN}
				</if>
			)
		WHERE 
		      USER.MBH_IDX_NO = #{useridx}
		
		ORDER BY 
		      FRIEND.FRND_MBH_SORT_SQNO
	</select>



