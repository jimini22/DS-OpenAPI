/*		
        String postBooksUri = "http://127.0.0.1:8080/wbt3-accnt-web/books";
        Book freshBook = new Book();
        freshBook.setBookId(8);
        freshBook.setTitle("8번째 책");
        freshBook.setPrice(10000);
        freshBook.setEmail("yaong@yaong.com");
        
