		<appender-ref ref="SQL" />
		<appender-ref ref="CONSOLE" />
    </logger> 
    
	<root>
		<level value="DEBUG"></level>
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="APPLICATION" />
		<appender-ref ref="SQL" />		
		<appender-ref ref="ERROR_LOG" />		
