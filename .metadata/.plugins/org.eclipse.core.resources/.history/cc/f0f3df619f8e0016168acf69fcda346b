		<appender-ref ref="ERROR_LOG" />
	</category>	
	
	<logger name="org.springframework.jndi">
		<level value="ERROR" />
	</logger>
	
    <!-- Query Loggers -->
    <logger name="jdbc.sqlonly" additivity="false">  
        <level value="debug"/>  
